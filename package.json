{
  "name": "hot-controller",
  "version": "1.1.1",
  "description":
    "hot-controller is a zero-config, hot-reloading controller library for node.js.",
  "main": "index.js",
  "bin": {
    "hot-controller": "./bin/cli.js"
  },
  "files": ["bin", "lib", "src", "index.js", "middleware.js"],
  "scripts": {
    "lint": "eslint src",
    "test": "jest --config=jest.config.json",
    "test:ci": "npm-run-all lint build test",
    "build": "rimraf lib && babel src -d lib",
    "prepare": "npm run build",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hot-controller/hot-controller.git"
  },
  "lint-staged": {
    "*.{js,json,md}": ["prettier --write", "git add"]
  },
  "keywords": ["express", "controller", "hmr"],
  "author": "Philip Andersson <philipodev@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hot-controller/hot-controller/issues"
  },
  "engines": {
    "node": ">= 6.0.0"
  },
  "homepage": "https://github.com/hot-controller/hot-controller#readme",
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.42",
    "all-contributors-cli": "^5.0.0",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^9.0.0",
    "babel-jest": "^23.0.0",
    "codecov": "^3.0.0",
    "eslint": "^5.0.0",
    "eslint-plugin-jest": "^21.13.0",
    "husky": "^1.1.4",
    "jest": "^22.4.2",
    "lint-staged": "^7.0.0",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.11.1",
    "rimraf": "^2.6.2",
    "superagent": "^3.8.2",
    "supertest": "^3.0.0"
  },
  "dependencies": {
    "@babel/core": "^7.0.0-beta.46",
    "@babel/plugin-proposal-decorators": "^7.0.0-beta.46",
    "@babel/preset-env": "^7.0.0-beta.46",
    "@babel/register": "^7.0.0-beta.46",
    "chalk": "^2.3.2",
    "chokidar": "^2.0.2",
    "commander": "^2.15.0",
    "express": "^4.16.2",
    "lodash": "^4.17.5",
    "mkdirp": "^0.5.1",
    "promise-events": "^0.1.4",
    "recursive-readdir": "^2.2.2",
    "shuri": "^1.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && lint-staged"
    }
  }
}
