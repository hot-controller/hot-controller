{
  "name": "hot-controller",
  "version": "1.0.0-alpha.10",
  "description":
    "hot-controller is a zero-config, hot-reloading controller library for node.js.",
  "main": "index.js",
  "bin": {
    "hot-controller": "./bin/cli.js"
  },
  "files": ["bin", "lib", "src", "index.js", "middleware.js", "babel.js"],
  "scripts": {
    "lint": "eslint src",
    "test": "jest --config=jest.config.json",
    "test:lib": "jest --config=jest.lib.config.json",
    "test:ci": "npm-run-all lint build build:fixtures test",
    "build": "rimraf lib && babel src -d lib",
    "build:fixtures":
      "node fixtures/build.js && babel fixtures/plugins -d fixtures/dist/plugins",
    "prepare": "yarn build",
    "precommit": "npm run lint && lint-staged",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hot-controller/hot-controller.git"
  },
  "lint-staged": {
    "*.{js,json,md}": ["prettier --write", "git add"]
  },
  "keywords": ["express", "controller", "hmr"],
  "author": "Philip Andersson <philipodev@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hot-controller/hot-controller/issues"
  },
  "engines": {
    "node": ">= 6.0.0"
  },
  "homepage": "https://github.com/hot-controller/hot-controller#readme",
  "devDependencies": {
    "all-contributors-cli": "^4.11.1",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "codecov": "^3.0.0",
    "eslint": "^4.18.2",
    "eslint-plugin-jest": "^21.13.0",
    "husky": "^0.15.0-rc.9",
    "jest": "^22.4.2",
    "lint-staged": "^7.0.0",
    "prettier": "^1.11.1",
    "rimraf": "^2.6.2",
    "superagent": "^3.8.2",
    "supertest": "^3.0.0"
  },
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "chalk": "^2.3.2",
    "chokidar": "^2.0.2",
    "commander": "^2.15.0",
    "express": "^4.16.2",
    "find-babel-config": "^1.1.0",
    "lodash": "^4.17.5",
    "memory-fs": "^0.4.1",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.2",
    "promise-events": "^0.1.4",
    "recursive-readdir": "^2.2.2",
    "require-from-string": "^2.0.1",
    "shuri": "^1.0.1",
    "webpack": "^4.1.1",
    "webpack-sources": "^1.1.0"
  }
}
